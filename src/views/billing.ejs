<%- include('partials/header') %>
<div class="flex flex-col lg:flex-row">
    <%- include('partials/sidebar') %>

    <main class="flex-1 lg:ml-64 p-4 md:p-8 min-h-screen bg-slate-50 dark:bg-slate-900 transition-all">
        
        <div class="mb-8">
            <h2 class="text-2xl md:text-3xl font-extrabold text-slate-800 dark:text-white leading-tight">Billing Dashboard</h2>
            <p class="text-slate-500 text-sm">Ringkasan pendapatan dan transaksi layanan network</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="bg-blue-600 p-6 rounded-[2rem] shadow-xl shadow-blue-500/20 text-white relative overflow-hidden group">
                <i class="fas fa-wallet absolute -right-4 -bottom-4 text-8xl opacity-10 group-hover:scale-110 transition-transform"></i>
                <p class="text-[10px] uppercase font-bold tracking-widest opacity-80 mb-2">Total Pendapatan</p>
                <h3 class="text-2xl font-black italic">Rp <%= billing.totalRevenue.toLocaleString('id-ID') %></h3>
                <div class="mt-4 flex items-center text-[10px] font-bold bg-white/20 w-fit px-2 py-1 rounded-full">
                    <i class="fas fa-arrow-up mr-1"></i> +12% Bulan ini
                </div>
            </div>

            <div class="bg-white dark:bg-slate-800 p-6 rounded-[2rem] border border-slate-200 dark:border-slate-700 shadow-sm">
                <p class="text-slate-400 text-[10px] uppercase font-bold tracking-widest mb-2">Penjualan Voucher</p>
                <h3 class="text-2xl font-black text-orange-500">Rp <%= billing.hotspotIncome.toLocaleString('id-ID') %></h3>
                <p class="text-[10px] text-slate-500 mt-2">Dihasilkan dari User Hotspot</p>
            </div>

            <div class="bg-white dark:bg-slate-800 p-6 rounded-[2rem] border border-slate-200 dark:border-slate-700 shadow-sm">
                <p class="text-slate-400 text-[10px] uppercase font-bold tracking-widest mb-2">Tagihan PPPoE</p>
                <h3 class="text-2xl font-black text-blue-500">Rp <%= billing.pppoeIncome.toLocaleString('id-ID') %></h3>
                <p class="text-[10px] text-slate-500 mt-2">Dihasilkan dari User Bulanan</p>
            </div>

            <div class="bg-white dark:bg-slate-800 p-6 rounded-[2rem] border border-slate-200 dark:border-slate-700 shadow-sm">
                <p class="text-slate-400 text-[10px] uppercase font-bold tracking-widest mb-2">Pelanggan Aktif</p>
                <h3 class="text-2xl font-black text-slate-800 dark:text-white"><%= billing.activeSubs %> <span class="text-sm font-normal opacity-50 text-slate-400">User</span></h3>
                <p class="text-[10px] text-emerald-500 mt-2 font-bold uppercase">Semua layanan</p>
            </div>
        </div>

        <div class="bg-white dark:bg-slate-800 rounded-[2.5rem] border border-slate-200 dark:border-slate-700 shadow-sm overflow-hidden">
            <div class="p-6 border-b dark:border-slate-700 flex justify-between items-center bg-slate-50/50 dark:bg-slate-800/50">
                <h3 class="font-bold text-slate-800 dark:text-white">Transaksi Terakhir</h3>
                <button class="text-[10px] font-black bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 px-3 py-1.5 rounded-full hover:bg-blue-600 hover:text-white transition">
                    LIHAT SEMUA LAPORAN
                </button>
            </div>
            
            <div class="overflow-x-auto">
                <table class="w-full text-left text-sm whitespace-nowrap">
                    <thead class="bg-slate-50/50 dark:bg-slate-900/50 text-slate-400 uppercase text-[10px] tracking-widest">
                        <tr>
                            <th class="p-5">ID Transaksi</th>
                            <th class="p-5">Pelanggan</th>
                            <th class="p-5">Tipe</th>
                            <th class="p-5">Jumlah</th>
                            <th class="p-5">Waktu</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-100 dark:divide-slate-700 font-medium">
                        <% billing.recentTransactions.forEach(tx => { %>
                        <tr class="hover:bg-slate-50/50 dark:hover:bg-slate-700/30 transition-colors">
                            <td class="p-5 text-slate-400 font-mono text-xs"><%= tx.id %></td>
                            <td class="p-5 font-bold text-slate-700 dark:text-blue-300"><%= tx.user %></td>
                            <td class="p-5">
                                <span class="px-3 py-1 rounded-full text-[10px] font-bold uppercase tracking-tighter <%= tx.type === 'Hotspot' ? 'bg-orange-100 text-orange-600 dark:bg-orange-900/30 dark:text-orange-400' : 'bg-blue-100 text-blue-600 dark:bg-blue-900/30 dark:text-blue-400' %>">
                                    <%= tx.type %>
                                </span>
                            </td>
                            <td class="p-5 font-bold text-slate-800 dark:text-white">Rp <%= tx.amount.toLocaleString('id-ID') %></td>
                            <td class="p-5 text-slate-400 text-xs"><%= tx.date %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>

<%- include('partials/footer') %>
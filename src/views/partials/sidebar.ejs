<div class="lg:hidden flex items-center justify-between bg-white dark:bg-slate-800 p-4 border-b dark:border-slate-700 sticky top-0 z-50 transition-colors">
    <div class="flex items-center space-x-2">
        <div class="bg-blue-600 p-1.5 rounded-lg"><i class="fas fa-network-wired text-white text-sm"></i></div>
        <h1 class="font-bold text-slate-800 dark:text-white">FIZA RouterOS</h1>
    </div>
    <button onclick="toggleSidebar()" class="p-2 text-slate-600 dark:text-slate-300">
        <i class="fas fa-bars text-xl"></i>
    </button>
</div>

<div id="sidebar-overlay" onclick="toggleSidebar()" class="fixed inset-0 bg-black/50 z-30 hidden lg:hidden"></div>

<aside id="sidebar" class="fixed inset-y-0 left-0 z-40 w-64 bg-white dark:bg-slate-800 border-r border-slate-200 dark:border-slate-700 transition-transform duration-300 -translate-x-full lg:translate-x-0 flex flex-col">
    
    <div class="p-6 flex items-center justify-between border-b dark:border-slate-700/50">
        <div class="flex items-center">
            <div class="bg-blue-600 p-2 rounded-xl shadow-lg shadow-blue-500/30 mr-3">
                <i class="fas fa-microchip text-white"></i>
            </div>
            <div>
                <h1 class="text-sm font-bold dark:text-white leading-tight uppercase tracking-tight">FIZA CORE</h1>
                <p class="text-[10px] text-slate-500 uppercase tracking-widest font-bold">Infrastruktur</p>
            </div>
        </div>
    </div>

    <div class="flex-1 overflow-y-auto custom-scroll p-4 space-y-6">
        
        <div>
            <label class="text-[10px] font-bold text-slate-400 uppercase px-2 mb-2 block tracking-widest">Active Node</label>
            <select onchange="window.location.href='/dashboard/' + this.value" class="w-full bg-slate-100 dark:bg-slate-900 border-none text-xs rounded-xl p-3 focus:ring-2 focus:ring-blue-500 cursor-pointer dark:text-slate-300 outline-none transition-all">
                <% allRouters.forEach(r => { %>
                    <option value="<%= r.id %>" <%= r.id == router.id ? 'selected' : '' %>><%= r.alias_name %></option>
                <% }) %>
            </select>
        </div>

        <% if (typeof page !== 'undefined' && page === 'network') { %>
            <nav class="space-y-1">
                <label class="text-[10px] font-bold text-blue-500 uppercase px-2 mb-2 block tracking-widest">Network Infrastructure</label>
                
                <a href="/dashboard/<%= router.id %>" class="flex items-center p-3 text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-700/50 rounded-xl transition group">
                    <i class="fas fa-arrow-left w-8 text-lg group-hover:-translate-x-1 transition-transform"></i><span>Kembali</span>
                </a>

                <div class="space-y-1 pt-2">
                    <button onclick="toggleSubMenu('menu-mikrotik')" class="w-full flex items-center justify-between p-3 text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 rounded-xl font-bold border border-blue-100 dark:border-blue-900/30">
                        <div class="flex items-center">
                            <i class="fas fa-server w-8 text-lg"></i><span>MikroTik (ROS)</span>
                        </div>
                        <i id="arrow-menu-mikrotik" class="fas fa-chevron-right text-[10px] transition-transform rotate-90"></i>
                    </button>
                    <div id="menu-mikrotik" class="pl-8 space-y-1 border-l-2 border-blue-100 dark:border-blue-900/30 ml-5">
                        <a href="/dashboard/<%= router.id %>/interfaces" class="block p-2 text-xs text-slate-500 hover:text-blue-500">Interfaces</a>
                        <a href="#" class="block p-2 text-xs text-slate-500 hover:text-blue-500">IP Settings</a>
                        <a href="#" class="block p-2 text-xs text-slate-500 hover:text-blue-500">Hotspot WiFi</a>
                        <a href="#" class="block p-2 text-xs text-slate-500 hover:text-blue-500">PPPoE Bulanan</a>
                    </div>
                </div>

                <div class="space-y-1 pt-2">
                    <button onclick="toggleSubMenu('menu-olt')" class="w-full flex items-center justify-between p-3 text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-700/50 rounded-xl transition group">
                        <div class="flex items-center">
                            <i class="fas fa-network-wired w-8 text-lg group-hover:text-emerald-500 transition-colors"></i><span>Fiber (OLT)</span>
                        </div>
                        <i id="arrow-menu-olt" class="fas fa-chevron-right text-[10px] transition-transform"></i>
                    </button>
                    <div id="menu-olt" class="hidden pl-8 space-y-1 border-l-2 border-slate-100 dark:border-slate-700 ml-5">
                        <a href="#" class="block p-2 text-xs text-slate-500 hover:text-emerald-500">ONU / ONT List</a>
                        <a href="#" class="block p-2 text-xs text-slate-500 hover:text-emerald-500">ODP / ODC Maps</a>
                        <a href="#" class="block p-2 text-xs text-red-400 font-bold uppercase tracking-tighter italic">LOS Alarms</a>
                    </div>
                </div>
            </nav>

        <% } else if (typeof page !== 'undefined' && page === 'billing') { %>
            <nav class="space-y-1">
                <label class="text-[10px] font-bold text-emerald-500 uppercase px-2 mb-2 block tracking-widest">Financial & Billing</label>
                <a href="/dashboard/<%= router.id %>" class="flex items-center p-3 text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-700/50 rounded-xl transition group">
                    <i class="fas fa-arrow-left w-8 text-lg group-hover:-translate-x-1 transition-transform"></i><span>Kembali</span>
                </a>
                <a href="/dashboard/<%= router.id %>/billing" class="flex items-center p-3 text-emerald-600 dark:text-emerald-400 bg-emerald-50 dark:bg-emerald-900/20 rounded-xl font-semibold border border-emerald-100 dark:border-emerald-900/30">
                    <i class="fas fa-file-invoice-dollar w-8 text-lg"></i><span>Billing Overview</span>
                </a>
                <a href="#" class="flex items-center p-3 text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-700/50 rounded-xl transition group">
                    <i class="fas fa-users-gear w-8 text-lg group-hover:text-blue-500"></i><span>Pelanggan</span>
                </a>
                <a href="#" class="flex items-center p-3 text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-700/50 rounded-xl transition group">
                    <i class="fas fa-receipt w-8 text-lg group-hover:text-orange-500"></i><span>Laporan Transaksi</span>
                </a>
            </nav>

        <% } else if (typeof page !== 'undefined' && page === 'settings') { %>
            <nav class="space-y-1">
                <label class="text-[10px] font-bold text-purple-500 uppercase px-2 mb-2 block tracking-widest">System & Business</label>
                <a href="/dashboard/<%= router.id %>" class="flex items-center p-3 text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-700/50 rounded-xl transition group">
                    <i class="fas fa-arrow-left w-8 text-lg group-hover:-translate-x-1 transition-transform"></i><span>Kembali</span>
                </a>
                <a href="/dashboard/<%= router.id %>/settings" class="flex items-center p-3 text-purple-600 dark:text-purple-400 bg-purple-50 dark:bg-purple-900/20 rounded-xl font-semibold border border-purple-100 dark:border-purple-900/30">
                    <i class="fas fa-sliders w-8 text-lg"></i><span>App & Role Access</span>
                </a>
                <div class="pt-4 space-y-1">
                    <label class="text-[9px] font-black text-slate-400 uppercase px-3 tracking-tighter">Pricing Engine</label>
                    <a href="#" class="flex items-center p-3 text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-700/50 rounded-xl transition group">
                        <i class="fas fa-tags w-8 text-lg group-hover:text-orange-500"></i><span>Harga Hotspot</span>
                    </a>
                    <a href="#" class="flex items-center p-3 text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-700/50 rounded-xl transition group">
                        <i class="fas fa-percentage w-8 text-lg group-hover:text-emerald-500"></i><span>Margin PPPoE</span>
                    </a>
                </div>
            </nav>

        <% } else { %>
            <nav class="space-y-1">
                <label class="text-[10px] font-bold text-slate-400 uppercase px-2 mb-2 block tracking-widest text-opacity-70">Main Menu</label>
                
                <a href="/dashboard/<%= router.id %>" class="flex items-center p-3 text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 rounded-xl font-semibold border border-blue-100 dark:border-blue-900/30">
                    <i class="fas fa-th-large w-8 text-lg"></i><span>Dashboard Utama</span>
                </a>

                <a href="/dashboard/<%= router.id %>/network" class="flex items-center p-3 text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-700/50 rounded-xl transition group">
                    <i class="fas fa-project-diagram w-8 text-lg group-hover:text-blue-500 transition-colors"></i><span>Network Dashboard</span>
                </a>

                <a href="/dashboard/<%= router.id %>/billing" class="flex items-center p-3 text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-700/50 rounded-xl transition group">
                    <i class="fas fa-file-invoice-dollar w-8 text-lg group-hover:text-emerald-500 transition-colors"></i><span>Billing Dashboard</span>
                </a>

                <a href="/dashboard/<%= router.id %>/settings" class="flex items-center p-3 text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-700/50 rounded-xl transition group">
                    <i class="fas fa-cog w-8 text-lg group-hover:text-purple-500 transition-colors"></i><span>App Settings</span>
                </a>
            </nav>
        <% } %>
    </div>

    <div class="p-4 border-t dark:border-slate-700 space-y-3 bg-slate-50/50 dark:bg-slate-800/50">
        <button id="theme-toggle" class="flex items-center justify-center w-full p-2.5 space-x-2 bg-white dark:bg-slate-700 rounded-xl text-slate-600 dark:text-slate-300 border dark:border-slate-600 shadow-sm hover:ring-2 hover:ring-blue-500 transition-all">
            <i id="theme-toggle-dark-icon" class="hidden fas fa-moon text-sm"></i>
            <i id="theme-toggle-light-icon" class="hidden fas fa-sun text-sm"></i>
            <span class="text-[10px] font-bold uppercase tracking-wider">Switch Mode</span>
        </button>

        <div class="bg-white dark:bg-slate-900 rounded-2xl p-3 border border-slate-200 dark:border-slate-700 space-y-3 shadow-sm transition-colors">
            <div class="flex items-center space-x-3">
                <div class="w-9 h-9 rounded-xl bg-blue-600 flex items-center justify-center text-white shadow-lg shadow-blue-500/20">
                    <i class="fas fa-user-tie text-xs"></i>
                </div>
                <div class="flex-1 min-w-0">
                    <p class="text-[11px] font-bold text-slate-800 dark:text-white truncate uppercase tracking-tight">
                        <%= locals.user ? user.name : 'Administrator' %>
                    </p>
                    <p class="text-[9px] text-slate-500 truncate font-medium uppercase mt-0.5 tracking-tighter">
                        <%= locals.user ? user.role : 'Superuser' %>
                    </p>
                </div>
            </div>
            
            <div class="grid grid-cols-2 gap-2">
                <button onclick="rebootRouter()" class="flex flex-col items-center justify-center p-2 bg-orange-50 dark:bg-orange-900/10 text-orange-600 dark:text-orange-400 rounded-xl text-[9px] font-bold uppercase hover:bg-orange-600 hover:text-white transition-all group">
                    <i class="fas fa-power-off mb-1 group-hover:scale-110 transition-transform"></i>
                    <span>Reboot</span>
                </button>
                <a href="/logout" class="flex flex-col items-center justify-center p-2 bg-red-50 dark:bg-red-900/10 text-red-600 dark:text-red-400 rounded-xl text-[9px] font-bold uppercase hover:bg-red-600 hover:text-white transition-all group">
                    <i class="fas fa-sign-out-alt mb-1 group-hover:scale-110 transition-transform"></i>
                    <span>Logout</span>
                </a>
            </div>
        </div>
        
        <div class="text-center">
            <p class="text-[9px] text-slate-400 font-mono tracking-tighter opacity-50 uppercase">
                IP: <%= router.vpn_ip %>
            </p>
        </div>
    </div>
</aside>

<script>
    function toggleSidebar() {
        document.getElementById('sidebar').classList.toggle('-translate-x-full');
        document.getElementById('sidebar-overlay').classList.toggle('hidden');
    }
    function toggleSubMenu(id) {
        const menu = document.getElementById(id);
        const arrow = document.getElementById('arrow-' + id);
        if(menu) menu.classList.toggle('hidden');
        if(arrow) arrow.classList.toggle('rotate-90');
    }
</script>
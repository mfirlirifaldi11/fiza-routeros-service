<%- include('partials/header') %>
<div class="flex flex-col lg:flex-row">
    <%- include('partials/sidebar') %>

    <main class="flex-1 lg:ml-64 p-4 md:p-8 min-h-screen bg-slate-50 dark:bg-slate-900 transition-all">
        
        <div class="mb-8 flex justify-between items-center">
            <div>
                <h2 class="text-2xl md:text-3xl font-extrabold text-slate-800 dark:text-white leading-tight">Network Dashboard</h2>
                <p class="text-slate-500 text-sm">Monitoring Infrastruktur MikroTik & Fiber Optic (OLT)</p>
            </div>
            <div class="hidden md:block">
                <span class="px-4 py-2 bg-emerald-100 text-emerald-600 dark:bg-emerald-900/30 dark:text-emerald-400 rounded-2xl text-xs font-bold uppercase tracking-widest">
                    <i class="fas fa-circle mr-2 animate-pulse"></i> All Systems Nominal
                </span>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="bg-white dark:bg-slate-800 p-6 rounded-[2.5rem] border border-slate-200 dark:border-slate-700 shadow-sm">
                <div class="flex justify-between items-start mb-4">
                    <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/30 text-blue-600 rounded-2xl flex items-center justify-center">
                        <i class="fas fa-microchip"></i>
                    </div>
                    <span class="text-[10px] font-black text-emerald-500 uppercase italic">Active</span>
                </div>
                <p class="text-slate-400 text-[10px] uppercase font-bold tracking-widest">OLT Status</p>
                <h3 class="text-xl font-black text-slate-700 dark:text-white">EPON / GPON</h3>
                <p class="text-[10px] text-slate-500 mt-1">Temp: <%= network.temp %>Â°C | Uplink: 10G</p>
            </div>

            <div class="bg-white dark:bg-slate-800 p-6 rounded-[2.5rem] border border-slate-200 dark:border-slate-700 shadow-sm">
                <div class="flex justify-between items-start mb-4">
                    <div class="w-12 h-12 bg-emerald-100 dark:bg-emerald-900/30 text-emerald-600 rounded-2xl flex items-center justify-center">
                        <i class="fas fa-plug-circle-check"></i>
                    </div>
                    <span class="text-[10px] font-black text-slate-400 uppercase tracking-widest"><%= network.totalOnu %> Total</span>
                </div>
                <p class="text-slate-400 text-[10px] uppercase font-bold tracking-widest">ONU Online</p>
                <h3 class="text-3xl font-black text-emerald-500"><%= network.onuOnline %></h3>
                <div class="w-full bg-slate-100 dark:bg-slate-700 h-1.5 rounded-full mt-3 overflow-hidden">
                    <div class="bg-emerald-500 h-full" style="width: 90%"></div>
                </div>
            </div>

            <div class="bg-white dark:bg-slate-800 p-6 rounded-[2.5rem] border border-slate-200 dark:border-slate-700 shadow-sm">
                <div class="flex justify-between items-start mb-4">
                    <div class="w-12 h-12 bg-red-100 dark:bg-red-900/30 text-red-600 rounded-2xl flex items-center justify-center">
                        <i class="fas fa-radiation"></i>
                    </div>
                </div>
                <p class="text-slate-400 text-[10px] uppercase font-bold tracking-widest">LOS Alarms</p>
                <h3 class="text-3xl font-black text-red-500"><%= network.losAlarms %></h3>
                <p class="text-[10px] text-red-400 mt-2 font-bold animate-pulse uppercase italic">Critical: Check Patchcord!</p>
            </div>

            <div class="bg-blue-600 p-6 rounded-[2.5rem] shadow-xl shadow-blue-500/20 text-white group overflow-hidden relative">
                <i class="fas fa-chart-line absolute -right-4 -bottom-4 text-8xl opacity-10 group-hover:scale-110 transition-transform"></i>
                <p class="text-[10px] uppercase font-bold tracking-widest opacity-80 mb-2">Network Load</p>
                <h3 class="text-2xl font-black italic">842 <span class="text-sm">Mbps</span></h3>
                <p class="text-[10px] mt-2 opacity-80 uppercase tracking-tight">Main Gateway Traffic</p>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <div class="bg-white dark:bg-slate-800 p-8 rounded-[3rem] border border-slate-200 dark:border-slate-700 shadow-sm">
                <h3 class="font-black text-slate-800 dark:text-white mb-6 uppercase tracking-tighter flex items-center">
                    <i class="fas fa-sitemap mr-3 text-blue-500"></i> Distribusi Jalur Fiber (ODC)
                </h3>
                <div class="space-y-6">
                    <div class="flex items-center justify-between p-4 bg-slate-50 dark:bg-slate-900/50 rounded-2xl border border-dashed border-slate-200 dark:border-slate-700">
                        <div class="flex items-center gap-4">
                            <div class="text-xs font-bold text-slate-400">P01</div>
                            <div>
                                <p class="text-sm font-bold text-slate-700 dark:text-slate-200 italic leading-none">ODC-MAWAR-01</p>
                                <p class="text-[9px] text-slate-400 uppercase tracking-widest">32 Clients | Signal Avg: -19dBm</p>
                            </div>
                        </div>
                        <span class="w-3 h-3 bg-emerald-500 rounded-full shadow-[0_0_10px_rgba(16,185,129,0.5)]"></span>
                    </div>
                    <div class="flex items-center justify-between p-4 bg-slate-50 dark:bg-slate-900/50 rounded-2xl border border-dashed border-slate-200 dark:border-slate-700">
                        <div class="flex items-center gap-4">
                            <div class="text-xs font-bold text-slate-400">P02</div>
                            <div>
                                <p class="text-sm font-bold text-slate-700 dark:text-slate-200 italic leading-none">ODC-MELATI-02</p>
                                <p class="text-[9px] text-red-400 uppercase tracking-widest">12 Clients | LOS Detected</p>
                            </div>
                        </div>
                        <span class="w-3 h-3 bg-red-500 rounded-full shadow-[0_0_10px_rgba(239,68,68,0.5)] animate-pulse"></span>
                    </div>
                </div>
            </div>

            <div class="bg-slate-800 dark:bg-slate-950 p-8 rounded-[3rem] text-white shadow-2xl relative overflow-hidden">
                <div class="relative z-10">
                    <h3 class="font-black mb-6 uppercase tracking-widest text-sm text-blue-400">Quick Maintenance</h3>
                    <div class="grid grid-cols-2 gap-4">
                        <button class="bg-white/10 hover:bg-blue-600 p-4 rounded-3xl transition-all flex flex-col items-center gap-3 border border-white/5 group">
                            <i class="fas fa-broom text-xl group-hover:scale-110"></i>
                            <span class="text-[9px] font-bold uppercase tracking-widest text-center">Clear ARP Cache</span>
                        </button>
                        <button class="bg-white/10 hover:bg-emerald-600 p-4 rounded-3xl transition-all flex flex-col items-center gap-3 border border-white/5 group">
                            <i class="fas fa-sync text-xl group-hover:rotate-180 transition-transform duration-500"></i>
                            <span class="text-[9px] font-bold uppercase tracking-widest text-center">Sync OLT Config</span>
                        </button>
                        <button class="bg-white/10 hover:bg-orange-600 p-4 rounded-3xl transition-all flex flex-col items-center gap-3 border border-white/5 group">
                            <i class="fas fa-satellite-dish text-xl"></i>
                            <span class="text-[9px] font-bold uppercase tracking-widest text-center">Scan Rogue ONU</span>
                        </button>
                        <button class="bg-white/10 hover:bg-purple-600 p-4 rounded-3xl transition-all flex flex-col items-center gap-3 border border-white/5 group">
                            <i class="fas fa-file-export text-xl"></i>
                            <span class="text-[9px] font-bold uppercase tracking-widest text-center">Export Log</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

<%- include('partials/footer') %>